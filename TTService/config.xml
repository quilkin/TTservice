<?xml version='1.0' encoding='utf-8'?>
<widget id="com.quilkin.timetrial" version="0.9.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TimeTrial</name>
    <description>
      App for organising and running a cycling time-trial event, including timing purposes during the event
    </description>
    <author email="admin@timetrials.org.uk" href="http://timetrials.org.uk">
        Quilkin
    </author>
    <content src="index.html" />
    <access origin="*" />
  <feature name="File">
    <param name="onload" value="true" />
    <param name="android-package" value="org.apache.cordova.file.FileUtils" />
  </feature>
  <feature name="Media">
    <param name="onload" value="true" />
    <param name="android-package" value="org.apache.cordova.media.AudioHandler" />
  </feature>
  <feature name="Power">
    <param name="onload" value="true" />
    <param name="android-package" value="org.chromium.ChromePower" />
  </feature>
  <feature name="Device">
    <param name="onload" value="true" />
    <param name="android-package" value="org.apache.cordova.device" />
  </feature>
  <preference name="SplashScreen" value="screen" />
  <preference name="SplashScreenDelay" value="3000" />
</widget>
